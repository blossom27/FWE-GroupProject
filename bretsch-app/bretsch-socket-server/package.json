    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.6",
    "@types/node-fetch": "^2.5.7",
    "prettier": "^2.1.2",
    "ts-node-dev": "^1.0.0",
    "tslint": "^5.11.0",
