  "version": "1.0.0",
  "description": "Bretsch TypeScript Server for a e-vehicle app",
  "main": "./dist/src/server.js",
  "scripts": {
    "build": "tsc -b .",
    "start": "ts-node ./src/server.ts",
    "dev": "ts-node-dev ./src/server.ts",
    "lint": "tslint --project .",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "fixtures": "NODE_ENV=dev npx fixtures ./src/fixture --config ormconfig.js",
